<!DOCTYPE html>
<html>
<head>
  <title>Manage Agents</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --navy: #0f172a;
      --gold: #c9a24d;
      --bg: #f4f6fa;
      --card: #ffffff;
      --border: #e5e7eb;
      --text: #111827;
      --muted: #6b7280;
      --success: #16a34a;
      --danger: #dc2626;
      --pending: #d97706;
    }

    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(180deg, #f4f6fa, #eef2f7);
      color: var(--text);
      min-height: 100vh;
    }

    /* ================= HEADER ================= */
    .header {
      background: linear-gradient(135deg, #0f172a, #1e293b);
      color: #fff;
      padding: 22px;
      text-align: center;
      font-size: 20px;
      font-weight: 700;
      letter-spacing: 2px;
      text-transform: uppercase;
      box-shadow: 0 10px 25px rgba(0,0,0,0.35);
    }

    /* ================= CONTAINER ================= */
    .container {
      max-width: 1100px;
      margin: 40px auto;
      background: var(--card);
      padding: 28px 32px 34px;
      border-radius: 18px;
      box-shadow: 0 30px 60px rgba(15, 23, 42, 0.18);
      position: relative;
    }

    .container::before {
      content: "Agent management â€¢ Real estate system";
      position: absolute;
      top: 22px;
      right: 32px;
      font-size: 11px;
      letter-spacing: 1.8px;
      text-transform: uppercase;
      color: var(--muted);
    }

    .container h2 {
      margin: 0;
      font-size: 24px;
      font-weight: 600;
    }

    .container p {
      margin: 6px 0 22px;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1.6px;
      color: var(--muted);
    }

    /* ================= TABLE ================= */
    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      background: #fafafa;
      border-radius: 14px;
      overflow: hidden;
      box-shadow: inset 0 0 0 1px var(--border);
      font-size: 13px;
    }

    thead {
      background: #f1f5f9;
    }

    th {
      padding: 14px 16px;
      font-size: 11px;
      letter-spacing: 1px;
      text-transform: uppercase;
      color: var(--muted);
      text-align: left;
      border-bottom: 1px solid var(--border);
      font-weight: 600;
    }

    th:last-child {
      text-align: center;
    }

    /* ðŸ”¥ STRONGER TABLE ROW TEXT */
    td {
      padding: 15px 16px;
      border-bottom: 1px solid var(--border);
      vertical-align: middle;
      font-size: 14px;
      font-weight: 500;               /* Increased base weight */
      color: #1f2937;
    }

    /* NAME â€“ STRONGEST */
    td:first-child {
      font-weight: 700;
      color: #020617;
      letter-spacing: 0.2px;
    }

    /* EMAIL */
    td:nth-child(2) {
      font-weight: 600;
      color: #334155;
    }

    /* PHONE + AREA */
    td:nth-child(3),
    td:nth-child(4) {
      font-weight: 600;
      color: #1f2937;
    }

    tr {
      background: #ffffff;
      transition: all 0.15s ease;
    }

    tr:hover {
      background: #f8fafc;
      transform: translateY(-1px);
      box-shadow: 0 10px 18px rgba(148,163,184,0.35);
    }

    /* ================= STATUS ================= */
    .status {
      padding: 6px 14px;
      border-radius: 999px;
      font-size: 11px;
      font-weight: 700;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      border: 1px solid transparent;
      text-transform: capitalize;
      letter-spacing: 0.3px;
    }

    .status::before {
      content: "";
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: currentColor;
    }

    .status.pending {
      background: #fffbeb;
      color: var(--pending);
      border-color: #fde68a;
    }

    .status.approved {
      background: #ecfdf3;
      color: var(--success);
      border-color: #bbf7d0;
    }

    .status.rejected {
      background: #fef2f2;
      color: var(--danger);
      border-color: #fecaca;
    }

    /* ================= ACTION BUTTONS ================= */
    .actions a {
      padding: 8px 18px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 700;
      text-decoration: none;
      margin: 0 4px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      letter-spacing: 0.4px;
      transition: all 0.18s ease;
      border: 1px solid transparent;
      cursor: pointer;
    }

    .approve {
      background: linear-gradient(135deg, #16a34a, #15803d);
      color: #ffffff;
      border-color: #166534;
      box-shadow: 0 10px 18px rgba(22,163,74,0.45);
    }

    .approve:hover {
      background: linear-gradient(135deg, #22c55e, #16a34a);
      box-shadow: 0 14px 26px rgba(22,163,74,0.65);
      transform: translateY(-1px);
    }

    .reject {
      background: linear-gradient(135deg, #dc2626, #991b1b);
      color: #ffffff;
      border-color: #7f1d1d;
      box-shadow: 0 10px 18px rgba(220,38,38,0.45);
    }

    .reject:hover {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      box-shadow: 0 14px 26px rgba(220,38,38,0.65);
      transform: translateY(-1px);
    }

    .disabled {
      color: #9ca3af;
      font-size: 12px;
      font-weight: 600;
    }

    /* ================= BACK BUTTON ================= */
    .back {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-top: 28px;
      padding: 10px 22px;
      background: linear-gradient(135deg, #c9a24d, #e3c06d);
      color: #1f2937;
      font-weight: 700;
      text-decoration: none;
      border-radius: 999px;
      font-size: 13px;
      box-shadow: 0 12px 25px rgba(201,162,77,0.45);
      transition: all 0.15s ease;
    }

    .back:hover {
      transform: translateY(-1px);
      box-shadow: 0 16px 30px rgba(201,162,77,0.6);
    }
  </style>
</head>

<body>

<div class="header">
  MANAGE AGENTS
</div>

<div class="container">
  <h2>Agent List</h2>
  <p>Overview of all registered agents</p>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Area</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% agents.forEach(a => { %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.email %></td>
        <td><%= a.phone %></td>
        <td><%= a.area %></td>

        <td>
          <span class="status <%= a.status %>"><%= a.status %></span>
        </td>

        <td class="actions">
          <% if(a.status === 'pending') { %>
            <a class="approve" href="/admin/approve-agent/<%= a.id %>">âœ” Approve</a>
            <a class="reject" href="/admin/reject-agent/<%= a.id %>">âœ– Reject</a>
          <% } else { %>
            <span class="disabled">â€”</span>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <a class="back" href="/admin/dashboard">â¬… Back to Dashboard</a>
</div>

</body>
</html>
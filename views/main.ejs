<body>

<div class="section">

  <div class="section-title">Localities you may like</div>
<!-- TOP RIGHT LOGIN / REGISTER -->
<div class="auth-links">
  <a href="/login" class="auth-btn login">Login</a>
  <a href="/register" class="auth-btn register">Register</a>
</div>

  <div class="localities-main">

    <!-- LEFT ARROW -->
    <button class="loc-arrow left" onclick="scrollLocalities(-1)">‚ùÆ</button>

    <!-- SLIDER -->
    <div class="localities" id="localitiesSlider">

  <% if (localities && localities.length > 0) { %>

    <% localities.forEach(loc => { %>
      <div class="locality-card">
        <img src="/images/location-icon.png" class="loc-icon-main">

        <div class="loc-content">
          <div class="loc-name"><%= loc.location %></div>

          <div class="loc-type">
            <%= loc.total_properties %> Properties Available
          </div>

          <div class="loc-remark">
            High demand area
          </div>

          <hr>

          <a 
            href="/properties?location=<%= encodeURIComponent(loc.location) %>" 
            class="loc-btn">
            View Properties
          </a>
        </div>
      </div>
    <% }) %>

  <% } else { %>

    <p style="color:#64748b;padding:20px">
      No localities available yet
    </p>

  <% } %>

</div>


    <!-- RIGHT ARROW -->
    <button class="loc-arrow right" onclick="scrollLocalities(1)">‚ùØ</button>

  </div>
</div>

<script>
const locSlider = document.getElementById("localitiesSlider");
let locAutoScroll;

function scrollLocalities(dir){
  locSlider.scrollBy({ left: dir * 260, behavior: "smooth" });
}

function startLocAutoScroll(){
  locAutoScroll = setInterval(()=>{
    locSlider.scrollBy({ left: 1 });
    if(locSlider.scrollLeft + locSlider.clientWidth >= locSlider.scrollWidth){
      locSlider.scrollTo({ left: 0 });
    }
  }, 30);
}

function stopLocAutoScroll(){
  clearInterval(locAutoScroll);
}

startLocAutoScroll();
locSlider.addEventListener("mouseenter", stopLocAutoScroll);
locSlider.addEventListener("mouseleave", startLocAutoScroll);
</script>

